<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.appus.rangebar.RangeBar
            android:id="@+id/rb_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tickRadius="4dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start value" />

        <SeekBar
            android:id="@+id/sb_start_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ................... -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End value" />

        <SeekBar
            android:id="@+id/sb_end_value"
            android:max="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ................... -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tick interval" />

        <SeekBar
            android:id="@+id/sb_tick_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ................... -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tick radius" />

        <SeekBar
            android:id="@+id/sb_tick_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ................... -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bar stroke width" />

        <SeekBar
            android:id="@+id/sb_bar_stroke_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ................... -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connecting line stroke width" />

        <SeekBar
            android:id="@+id/sb_connecting_line_stroke_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ................... -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin width" />

        <SeekBar
            android:id="@+id/sb_pin_width"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
